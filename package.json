{
  "name": "vertz-monorepo",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "bun run --filter '*' build",
    "test": "bun run --filter '*' test",
    "test:watch": "bun run --filter '*' test:watch",
    "typecheck": "bun run --filter '*' typecheck",
    "lint": "biome check packages/",
    "lint:fix": "biome check --fix packages/",
    "format": "biome format packages/",
    "format:fix": "biome format --fix packages/",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "bun run build && changeset publish"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8"
  }
}
