{
  "name": "@vertz-examples/task-manager",
  "version": "0.0.2",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vertz dev",
    "dev:ssr": "vertz dev --ssr",
    "dev:worker": "wrangler dev",
    "build": "vertz build",
    "build:worker": "esbuild src/worker.ts --bundle --format=esm --outfile=dist/worker.js --platform=neutral --target=es2022",
    "start": "bun run server.ts",
    "preview": "bun run build && bun run start",
    "deploy": "bun run build && wrangler deploy",
    "codegen": "bun node_modules/@vertz/cli/dist/vertz.js codegen",
    "typecheck": "tsc --noEmit",
    "seed": "bun run src/seed.ts",
    "test": "bun run codegen && bun test",
    "e2e": "npx playwright test",
    "e2e:headed": "npx playwright test --headed"
  },
  "dependencies": {
    "@vertz/cloudflare": "workspace:*",
    "@vertz/db": "workspace:*",
    "@vertz/errors": "workspace:*",
    "@vertz/fetch": "workspace:*",
    "@vertz/schema": "workspace:*",
    "@vertz/server": "workspace:*",
    "@vertz/theme-shadcn": "workspace:*",
    "@vertz/ui": "workspace:*",
    "@vertz/ui-server": "workspace:*",
    "@vertz/ui-primitives": "workspace:*"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260305.0",
    "@playwright/test": "^1.58.2",
    "@vertz/cli": "workspace:*",
    "@vertz/ui-compiler": "workspace:*",
    "bun-types": "^1.3.9",
    "esbuild": "^0.27.3",
    "happy-dom": "^20.6.1",
    "typescript": "^5.8.0",
    "wrangler": "^4.65.0"
  }
}
