{
  "name": "@vertz/core",
  "version": "0.2.0",
  "type": "module",
  "license": "MIT",
  "description": "Vertz core framework primitives",
  "repository": {
    "type": "git",
    "url": "https://github.com/vertz-dev/vertz.git",
    "directory": "packages/core"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./internals": {
      "import": "./dist/internals.js",
      "types": "./dist/internals.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bunup",
    "test": "bun test",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@vertz/schema": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^4.0.18",
    "bunup": "latest",
    "typescript": "^5.7.0",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=22"
  },
  "sideEffects": false
}
