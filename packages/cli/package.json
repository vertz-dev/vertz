{
  "name": "@vertz/cli",
  "version": "0.1.0",
  "type": "module",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/vertz-dev/vertz.git",
    "directory": "packages/cli"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "bin": {
    "vertz": "./bin/vertz.ts"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "build": "bunup",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit -p tsconfig.typecheck.json"
  },
  "dependencies": {
    "@vertz/compiler": "workspace:*",
    "commander": "^14.0.0",
    "ink": "^6.6.0",
    "jiti": "^2.4.2",
    "react": "^19.2.4"
  },
  "devDependencies": {
    "@types/node": "^25.2.2",
    "@types/react": "^19.2.13",
    "bunup": "^0.16.23",
    "ink-testing-library": "^4.0.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=22"
  }
}
