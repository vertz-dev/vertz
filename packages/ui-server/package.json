{
  "name": "@vertz/ui-server",
  "version": "0.2.0",
  "type": "module",
  "license": "MIT",
  "description": "Vertz UI server-side rendering runtime",
  "repository": {
    "type": "git",
    "url": "https://github.com/vertz-dev/vertz.git",
    "directory": "packages/ui-server"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./dom-shim": {
      "import": "./dist/dom-shim/index.js",
      "types": "./dist/dom-shim/index.d.ts"
    },
    "./jsx-runtime": {
      "import": "./dist/jsx-runtime/index.js",
      "types": "./dist/jsx-runtime/index.d.ts"
    },
    "./bun-plugin": {
      "import": "./dist/bun-plugin/index.js",
      "types": "./dist/bun-plugin/index.d.ts"
    },
    "./fast-refresh-runtime": {
      "import": "./dist/bun-plugin/fast-refresh-runtime.js",
      "types": "./dist/bun-plugin/fast-refresh-runtime.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bunup",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@ampproject/remapping": "^2.3.0",
    "@vertz/core": "workspace:*",
    "@vertz/server": "workspace:*",
    "@vertz/ui": "workspace:*",
    "@vertz/ui-compiler": "workspace:*",
    "magic-string": "^0.30.0",
    "ts-morph": "^25.0.0"
  },
  "peerDependencies": {
    "vite": "^6.0.0"
  },
  "peerDependenciesMeta": {
    "vite": {
      "optional": true
    }
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.18",
    "bun-types": "latest",
    "bunup": "latest",
    "typescript": "^5.7.0",
    "vite": "^6.0.0",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=22"
  },
  "private": true
}
